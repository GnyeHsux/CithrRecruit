<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rv_item_home_height"
    android:padding="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_companyLogo"
        android:layout_width="@dimen/rv_item_img_width"
        android:layout_height="@dimen/rv_item_img_width"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/rv_item_margin"
        android:layout_marginStart="@dimen/rv_item_margin"
        android:src="@drawable/xsy"
        app:border_color="@android:color/white"
        app:border_width="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_toRightOf="@id/img_companyLogo"
        android:layout_toEndOf="@id/img_companyLogo"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_botton_rv_item">

            <TextView
                android:id="@+id/item_tv_jobName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                tool:text="产品经理"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/item_tv_workLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tool:text="北京"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_botton_rv_item">

            <TextView
                android:id="@+id/item_tv_companyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                tool:text="无锡九九鼎盛营销策划有限公司"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/item_tv_salaryRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="5k-10k"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/item_tv_workYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="1-5年"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/item_tv_degreeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                tool:text="本科"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                tool:text="05-14"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>