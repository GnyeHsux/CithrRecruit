<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rv_item_home_height"
    android:layout_marginLeft="@dimen/rv_item_margin"
    android:layout_marginRight="@dimen/rv_item_margin"
    android:layout_marginTop="@dimen/rv_item_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/img_companyLogo"
        android:layout_marginLeft="@dimen/rv_item_margin"
        android:layout_width="@dimen/rv_item_img_width"
        android:layout_height="@dimen/rv_item_img_width"
        android:src="@drawable/xsy"
        app:border_width="1dp"
        app:border_color="@android:color/white"/>

    <LinearLayout
        android:paddingLeft="@dimen/rv_item_paddingLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_botton_rv_item">

            <TextView
                android:id="@+id/item_tv_jobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="产品经理"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:id="@+id/item_tv_workLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="北京"
                android:textSize="@dimen/text_size_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_botton_rv_item">

            <TextView
                android:id="@+id/item_tv_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="无锡九九鼎盛营销策划有限公司"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/item_tv_salaryRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5k-10k"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/item_tv_workYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-5年"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/item_tv_degreeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="本科"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="05-14"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>